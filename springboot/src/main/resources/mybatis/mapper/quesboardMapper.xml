<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.kosmo.mvc.dao.QuesboardDao">

<insert id="addQuesboard" parameterType="qvo">
	insert into quesboard values (QUESBOARD_SEQ.nextval, 
	#{id}, #{qtitle}, #{qcont}, 0, sysdate)
</insert>

<update id="qbUpdate" parameterType="qvo">
	update quesboard set qtitle = #{qtitle}, qcont = #{qcont}
</update>

<delete id="qbDel" parameterType="int">
	delete from quesboard where qnum = #{num}
</delete>

<!-- Page List Query -->
<select id="totalCount" resultType="int">
	select count(*) from quesboard
</select>
<select id="listpage" parameterType="map" resultType="qvo">
				<!-- parameterType="java.util.Map" 로 해도 같음! -->
	select * from (
	    select rownum r_num, a.* from (
	        select * from quesboard order by qnum desc
	    ) a
	) where r_num between #{begin} and #{end}
</select>

<select id="getDetail" parameterType="int" resultType="qvo">
	select * from quesboard where qnum=#{num}
</select>

</mapper>